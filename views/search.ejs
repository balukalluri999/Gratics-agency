<!DOCTYPE html>
<html lang="en">

  <%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/nav.ejs') %>
    <br><br>
    <div class="container-fluid page-wrapper2">
      <div class="row">
        <div class="col-4">
          <h3 class="filter">Search,Filter</h3><hr>
          <form action="/home/search/<%=locals.username%>/byValue" method="post">
            <!-- <div class="wrap"> -->
            <div class="search">
              <input name="search" type="text" class="searchTerm" placeholder="What are you looking for?" />
              <button type="submit" class="searchButton"><i class="fa fa-search"></i></button>
            </div>
            <!-- </div> -->
            <div class="filter">
              <div class="category">
                <strong>Category</strong><br />
                <select name="category" class="selectBar" placeholder="Search by Category" id="category" >
                  <option value="none">Select</option>
                  <option value="all">All Web,Mobile development</option>
                  <option value="Web development">Web development</option>
                  <option value="Frontend developer">Frontend development</option>
                  <option value="Backend developer">Backend Development</option>
                  <option value="Web Designer">Web Designer</option>
                  <option value="Flutter development">Flutter developer</option>
                  <option value="UI/UX designers">UI/UX designers</option>
                </select>
              </div>
              <hr>
  
              <div class="experence">
                <strong>Experience Level</strong>
                <div>
                  <input name="experience" type="radio" id="entryLevel" value="entry"/><label for="entryLevel">Entry Level-$</label><br>
                  <input name="experience" type="radio" id="intermediateLevel" value="intermediate" /><label for="intermediateLevel">Intermediate Level-$$</label><br >
                  <input name="experience" type="radio" id="expert" value="expert" /><label for="expert">Expert Level - $$$</label><br />
                </div>
              </div>
              <hr>
              <div class="jobType">
                <strong>Job type</strong>
                <div>
                  <input type="radio" id="hourly" name="jobType" value="hourly" /><label for="hourly"> Paying Hourly</label><br>
                  <input type="radio" id="Fixed" name="jobType" value="fixedPrice" /><label for="Fixed">Fixed Prices</label><br>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="col-8 ">
          <!-- <div class="resultstext"> -->
            <h3 class="h3Tag">Search Results</h3><hr>
            <h5><%=locals.error%></h5>
            <% for(var i =0;i<(locals.output).length;i++) {%>
              <div class="block">
                <h4><a href="/home/jobDetails/searchname=/<%=output[i].JobName%>/<%=username%>" > <%=output[i].JobName%>  </a></h4>
                <div class="container">
                  <div class="row">
                    <div class="col-6">
                      Category: <%=locals.output[i].Category%>
                    </div>
                    <div class="col-6">
                      Experience Level: <%=output[i].Experience%>
                    </div>
                  </div>
                  <p><%=output[i].Discription%></p>
                  <div class="skillsRequired">
                    <% for(var j=0 ;j<locals.output[i].Skills.length;j++) {%>
                      <button href="/home/search/<%=locals.username%>/skill=/"+output[i].Skills[j]><%=output[i].Skills[j]%></button>
                      <% } %>
                  </div>
                </div>
              </div>
            <% } %>

          </div>
        </div>
      </div>
    </div>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
